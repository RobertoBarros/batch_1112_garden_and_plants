<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.image_url %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>


<%= link_to "https://google.com" do %>
   <i class='fa-brands fa-google'></i>
<% end %>

<div class="container mt-3">

  <div class="cards">

    <% @garden.plants.each do |plant| %>

      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plant.image_url %>)">
        <%= plant.name %>

        <%= link_to plant_path(plant), class: 'remove', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>



      </div>

    <% end %>


  </div>




  <div class="row justify-content-center mt-5">
    <div class="col-3">

      <%= simple_form_for([@garden, @plant]) do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <div class="d-grid gap-2">
          <%= f.submit 'Create Plant', class: 'btn btn-primary' %>
        </div>
      <% end %>


    </div>
  </div>


</div>
